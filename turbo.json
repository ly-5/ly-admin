{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
      "pnpm-lock.yaml",
      "**/.env.*local",
      "**/tsconfig*.json"
    ],
    "globalEnv": ["NODE_ENV"],
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": [
          "dist/**",
          "dist.zip"
        ]
      },
      "build:test": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**"]
      },
      "test:e2e": {},
      "dev": {
        "dependsOn": [],
        "outputs": [],
        "cache": false,
        "persistent": true
      }
    }
  }